{
  "name": "somachord",
  "description": "A simple self-hosted Subsonic client.",
  "version": "1.0.0",
  "author": {
    "name": "sammyette"
  },
  "main": "app.js",
  "build": {
    "appId": "party.sammyette.somachord",
    "mac": {
      "category": "public.app-category.music"
    },
    "extraResources": ["assets"],
    "files": [
      "!**/build/",
      "!src",
      "!.dockerignore"
    ]
  },
  "dependencies": {
    "discord-rpc": "github:sKiLdUsT/RPC",
    "is-electron": "^2.2.2",
    "js-md5": "^0.8.3"
  },
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  },
  "scripts": {
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  }
}
